<section id="widget-grid">
  <div class="row">

    <!-- Nuevo show ahora con divs, ya no existe tabla -->
    <article class="col-sm-6">

      <div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
        <header><span class="widget-icon"><i class="fa fa-binoculars"></i></span>

          <div class="widget-toolbar filter-group">
            <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), promotions_path, class: 'btn btn-primary' %>
            <%= link_to raw("<i class='fa fa-pencil'></i> #{t('simple_form.buttons.edit')}"), edit_promotion_path(@promotion), class: 'btn btn-primary' if can?(:update, @promotion) %>
          </div>
        </header>
        <!-- widget div-->
        <div class="no-padding">

          <!-- widget content -->
          <div class="widget-body">

            <div class="form-group">
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.name') %></strong></label>
                <div class="col-lg-9 details-data">
                  <%= @promotion.name %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.product') %></strong></label>
                <div class="col-lg-9 details-data">
                  <%= @promotion.product.try(:name) %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.box') %></strong></label>
                <div class="col-lg-9 details-data">
                  <%= @promotion.box.try(:name) %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.expiration_date') %></strong></label>
                <div class="col-lg-9 details-data">
                  <%= l(@promotion.expiration_date, :format => :long) if @promotion.expiration_date %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.promo_type') %></strong></label>
                <div class="col-lg-9 details-data">
                  <%= @promotion.i18n_promo_type %>
                </div>
              </div>

              <% if @promotion.with_stock? %>
                  <div class="row show-details">
                    <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.quantity_start') %></strong></label>

                    <div class="col-lg-9 details-data">
                      <%= @promotion.quantity_start %>
                    </div>
                  </div>
                  <div class="row show-details">
                    <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.quantity_available') %></strong></label>

                    <div class="col-lg-9 details-data">
                      <%= @promotion.quantity_available %>
                    </div>
                  </div>
              <% end %>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.from_date') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= l(@promotion.from_date, :format => :long) if @promotion.from_date %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.end_with') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= @promotion.i18n_end_with %>
                </div>
              </div>

              <% if @promotion.end_with_date? %>
                  <div class="row show-details">
                    <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.to_date') %></strong></label>
                    <div class="col-lg-9 details-data">
                      <%= l(@promotion.to_date, :format => :long) if @promotion.to_date %>
                    </div>
                  </div>
              <% end %>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.notes') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= @promotion.notes %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>

    <%= render 'products/index_prices' %>

  </div>
</section>

