<% if @product && @product_price %>
    $('<%=@unit_price_html_input_id%>').val(<%= number_to_currency(@product_price.price, unit: "") %>);
    $('<%=@stock_at_create_html_input_id%>').val(<%= @product.quantity_stock %>);
<% else %>
    $('<%=@unit_price_html_input_id%>').val('');
    $('<%=@stock_at_create_html_input_id%>').val('');
<% end %>


<% if @product_box_id_html_input_id.blank? %>
    $("<%= @product_box_id_html_input_id %>").html('');
<% else %>
    $("<%= @product_box_id_html_input_id %>").html('<%= raw options_for_select(options_select_for_product_box(@product)).gsub(/\n/, '') %>');
<% end %>





