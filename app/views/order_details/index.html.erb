<section id="widget-grid">
  <div class="row">
    <article class="col-xs-12">
      <div class="jarviswidget <%= @filter_active ? 'jarviswidget-color-redLight' : 'jarviswidget-color-darken' %>" id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false">
        <header>
          <span class="widget-icon"><i class="fa fa-table"></i></span>

          <h2><%= @filter_active ? t('simple_form.buttons.filtering') : '' %></h2>

          <div class="widget-toolbar filter-group">
            <%= link_to raw("<i class='fa fa-file'></i> #{t('simple_form.buttons.new')}"), new_order_detail_path, class: 'btn btn-primary' if (can? :create, OrderDetail) %>
            <a href="javascript:void(0)" data-target="#filter-wid-id-0" id="filtrar" role="button" class="filter-button btn btn-primary"><i class="fa fa-filter"></i> <%= @filter_active ? t('simple_form.buttons.filtering') : t('simple_form.buttons.filters') %>
            </a>
          </div>
        </header>
        <div class="no-padding">
          <div class="jarviswidget-editbox filter-zone" id="filter-wid-id-0" style="display:none;">
            <div class="col-xs-12"><%= search_form_for(@q, html: {name: 'filter_form', class: 'form-inline'}) do |f| %>
                  <fieldset>
                    <div class="row">
                      <div class="col-md-3 col-sm-6 col-xs-12">
                        <label for="q[order_id_cont]"><%= t('simple_form.labels.order') %></label>
                        <%= f.select :order_id_eq, options_from_collection_for_select(Order.all, :id, :name, @q.order_id_eq), {include_blank: true}, {class: "form-control input-sm"} %>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-12">
                        <label for="q[product_id_cont]"><%= t('simple_form.labels.product') %></label>
                        <%= f.select :product_id_eq, options_from_collection_for_select(Product.all, :id, :name, @q.product_id_eq), {include_blank: true}, {class: "form-control input-sm"} %>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-12">
                        <label for="q[quantity_cont]"><%= t('simple_form.labels.defaults.quantity') %></label>
                        <%= f.search_field :quantity_cont, label: false, class: "form-control input-sm" %>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-12 spanning">
                        <label for="q[unit_price_gteq]"><%= t('simple_form.labels.defaults.unit_price') %></label>

                        <div class="input-group input-group-sm block">
                          <%= f.search_field :unit_price_gteq, label: false, placeholder: t('simple_form.placeholders.from'), class: "form-control input-sm" %>
                        </div>
                        <div class="input-group input-group-sm block">
                          <%= f.search_field :unit_price_lteq, label: false, placeholder: t('simple_form.placeholders.to'), class: "form-control input-sm" %>
                        </div>
                      </div>
                    </div>
                    <div class="row pull-right">
                      <div class="col-sm-12">
                        <%= render 'shared/submit_filters' %>
                      </div>
                    </div>
                  </fieldset>
              <% end %>
            </div>
          </div>
          <div class="widget-body">
            <table id="dt_basic" width="100%" class="display table table-striped table-bordered table-hover" style="margin:0 padding-top:0px">
              <thead>
              <tr>
                <th class='all control'><%= sort_link(@q, :order_name, t('simple_form.labels.defaults.order')) %></th>
                <th><%= sort_link(@q, :product_name, t('simple_form.labels.defaults.product')) %></th>
                <th><%= sort_link(@q, :customer_branch_name, t('simple_form.labels.defaults.customer_branch')) %></th>
                <th><%= sort_link(@q, :quantity, t('simple_form.labels.defaults.quantity')) %></th>
                <th><%= sort_link(@q, :unit_price, t('simple_form.labels.defaults.unit_price')) %></th>
                <th class="all"><%= t('simple_form.screen.actions') %></th>
              </tr>
              </thead>
              <tbody>
              <% @order_details.each do |order_detail| %>
                  <tr>
                    <td><%= order_detail.order.try(:name) %></td>
                    <td><%= order_detail.product.try(:name) %></td>
                    <td><%= order_detail.customer_branch.try(:name) %></td>
                    <td><%= order_detail.quantity %></td>
                    <td align='right'><%= order_detail.unit_price %></td>
                    <td class="table-actions">
                      <%= render 'shared/action_icons', locals: {target: order_detail} %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <div class="widget-footer">
            <%= render 'shared/pagination', locals: {target: @order_details, model_index_path: order_details_path} %>
          </div>
        </div>
      </div>
    </article>
  </div>
</section>

