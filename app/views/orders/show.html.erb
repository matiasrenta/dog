<section id="widget-grid">
  <div class="row">

    <!-- Nuevo show ahora con divs, ya no existe tabla -->
    <article class="col-sm-6">

      <div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
        <header><span class="widget-icon"><i class="fa fa-binoculars"></i></span>

          <div class="widget-toolbar filter-group">
            <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), orders_path, class: 'btn btn-primary' %>
            <%= link_to raw("<i class='fa fa-pencil'></i> #{t('simple_form.buttons.edit')}"), edit_order_path(@order), class: 'btn btn-primary' if can?(:update, @order) %>
          </div>
        </header>
        <!-- widget div-->
        <div class="no-padding">

          <!-- widget content -->
          <div class="widget-body">

            <div class="form-group">
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.id') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= @order.id %>
                </div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.customer') %></strong></label>
                <div class="col-lg-9 details-data">
                  <%= @order.customer.try(:name) %>
                </div>
              </div>

              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.customer_branch') %></strong></label>
                <div class="col-lg-9 details-data">
                  <%= @order.customer_branch.try(:name) %>
                </div>
              </div>


              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.user') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= @order.user.try(:name) %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.iva') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= boolean_to_yes_no(@order.iva) %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.total_amount') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= @order.total_amount %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.status') %></strong></label>
                <div class="col-lg-9 details-data">
                  <%= Order.i18n_status(@order.status) %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.delivery_date') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= l(@order.delivery_date, :format => :long) if @order.delivery_date %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.created_at') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= l(@order.created_at, :format => :long) if @order.created_at %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.updated_at') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= l(@order.updated_at, :format => :long) if @order.created_at %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>

    <%= render 'index_order_details' %>

  </div>
</section>

