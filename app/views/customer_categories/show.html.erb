<section id="widget-grid">
  <div class="row">

    <!-- Nuevo show ahora con divs, ya no existe tabla -->
    <article class="col-sm-6">

      <div id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" class="jarviswidget jarviswidget-color-darken">
        <header><span class="widget-icon"><i class="fa fa-binoculars"></i></span>

          <div class="widget-toolbar filter-group">
            <%= link_to raw("<i class='fa fa-arrow-left'></i> #{t('simple_form.buttons.list')}"), customer_categories_path, class: 'btn btn-primary' %>
            <%= link_to raw("<i class='fa fa-pencil'></i> #{t('simple_form.buttons.edit')}"), edit_customer_category_path(@customer_category), class: 'btn btn-primary' if can?(:update, @customer_category) %>
          </div>
        </header>
        <!-- widget div-->
        <div class="no-padding">

          <!-- widget content -->
          <div class="widget-body">

            <div class="form-group">
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.name') %></strong></label>

                <div class="col-lg-9 details-data">
                  <%= @customer_category.name %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.company_profit_percent') %></strong></label>
                <div class="col-lg-9 details-data">
                  <%= @customer_category.company_profit_percent %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.seller_profit_percent') %></strong></label>
                <div class="col-lg-9 details-data">
                  <%= @customer_category.seller_profit_percent %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.total_profit_percent') %></strong></label>
                <div class="col-lg-9 details-data">
                  <%= @customer_category.total_profit_percent %>
                </div>
              </div>
              <div class="row show-details">
                <label class="col-lg-3 col-md-4 control-label"><strong><%= t('simple_form.labels.defaults.seller_commission_over_price_percent') %></strong></label>
                <div class="col-lg-9 details-data">
                  <%= @customer_category.seller_commission_over_price_percent %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>

