<% if @product && @product_price %>
    $('<%=@unit_price_html_input_id%>').val(<%= number_to_currency(@product_price.price, unit: "") %>);
    $('<%=@stock_at_create_html_input_id%>').val(<%= @product.quantity_stock %>);
<% else %>
    $('<%=@unit_price_html_input_id%>').val('');
    $('<%=@stock_at_create_html_input_id%>').val('');
<% end %>


<% if !@product_box_id_html_input_id.blank? %>
    <% options = options_select_for_product_box(@product) %>
    <% if options.size == 1 && options.first.last == 0 %>
        $('<%=@quantity_box_html_input_id%>').attr('readonly', true);
        $('<%=@quantity_html_input_id%>').attr('readonly', false);
    <% else %>
        $('<%=@quantity_box_html_input_id%>').attr('readonly', false);
        $('<%=@quantity_html_input_id%>').attr('readonly', true);
    <% end %>
    $("<%= @product_box_id_html_input_id %>").html('<%= raw options_for_select(options).gsub(/\n/, '') %>');
<% end %>

