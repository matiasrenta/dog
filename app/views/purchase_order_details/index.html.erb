<section id="widget-grid">
  <div class="row">
    <article class="col-xs-12">
      <div class="jarviswidget <%= @filter_active ? 'jarviswidget-color-redLight' : 'jarviswidget-color-darken' %>" id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false">
        <header>
          <span class="widget-icon"><i class="fa fa-table"></i></span>

          <h2><%= @filter_active ? t('simple_form.buttons.filtering') : '' %></h2>

          <div class="widget-toolbar filter-group">
            <%= link_to raw("<i class='fa fa-file'></i> #{t('simple_form.buttons.new')}"), new_purchase_order_detail_path, class: 'btn btn-primary' if (can? :create, PurchaseOrderDetail) %>
            <a href="javascript:void(0)" data-target="#filter-wid-id-0" id="filtrar" role="button" class="filter-button btn btn-primary"><i class="fa fa-filter"></i> <%= @filter_active ? t('simple_form.buttons.filtering') : t('simple_form.buttons.filters') %>
            </a>
          </div>
        </header>
        <div class="no-padding">
          <div class="jarviswidget-editbox filter-zone" id="filter-wid-id-0" style="display:none;">
            <div class="col-xs-12"><%= search_form_for(@q, html: {name: 'filter_form', class: 'form-inline'}) do |f| %>
                  <fieldset>


                    <div class="row">
                      <div class="col-md-3 col-sm-6 col-xs-12">
                        <label for="q[box_id_cont]"><%= t('simple_form.labels.box') %></label>
                        <%= f.select :box_id_eq, options_from_collection_for_select(Box.all, :id, :name, @q.box_id_eq), {include_blank: true}, {class: "form-control input-sm"} %>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-12 spanning">
                        <label for="q[quantity_gteq]"><%= t('simple_form.labels.defaults.quantity') %></label>

                        <div class="input-group input-group-sm block">
                          <%= f.search_field :quantity_gteq, label: false, placeholder: t('simple_form.placeholders.from'), class: "form-control input-sm" %>
                        </div>
                        <div class="input-group input-group-sm block">
                          <%= f.search_field :quantity_lteq, label: false, placeholder: t('simple_form.placeholders.to'), class: "form-control input-sm" %>
                        </div>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-12 spanning">
                        <label for="q[product_unit_cost_gteq]"><%= t('simple_form.labels.defaults.product_unit_cost') %></label>

                        <div class="input-group input-group-sm block">
                          <%= f.search_field :product_unit_cost_gteq, label: false, placeholder: t('simple_form.placeholders.from'), class: "form-control input-sm" %>
                        </div>
                        <div class="input-group input-group-sm block">
                          <%= f.search_field :product_unit_cost_lteq, label: false, placeholder: t('simple_form.placeholders.to'), class: "form-control input-sm" %>
                        </div>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-12 spanning">
                        <label for="q[box_unit_cost_gteq]"><%= t('simple_form.labels.defaults.box_unit_cost') %></label>

                        <div class="input-group input-group-sm block">
                          <%= f.search_field :box_unit_cost_gteq, label: false, placeholder: t('simple_form.placeholders.from'), class: "form-control input-sm" %>
                        </div>
                        <div class="input-group input-group-sm block">
                          <%= f.search_field :box_unit_cost_lteq, label: false, placeholder: t('simple_form.placeholders.to'), class: "form-control input-sm" %>
                        </div>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-12">
                        <label for="q[purchase_order_id_cont]"><%= t('simple_form.labels.purchase_order') %></label>
                        <%= f.select :purchase_order_id_eq, options_from_collection_for_select(PurchaseOrder.all, :id, :name, @q.purchase_order_id_eq), {include_blank: true}, {class: "form-control input-sm"} %>
                      </div>
                    </div>


                    <div class="row pull-right">
                      <div class="col-sm-12">
                        <%= render 'shared/submit_filters' %>
                      </div>
                    </div>
                  </fieldset>
              <% end %>
            </div>
          </div>
          <div class="widget-body">
            <table id="dt_basic" width="100%" class="display table table-striped table-bordered table-hover" style="margin:0 padding-top:0px">
              <thead>
              <tr>
                <th class='all control'><%= sort_link(@q, :box_name, t('simple_form.labels.defaults.box')) %></th>
                <th><%= sort_link(@q, :quantity, t('simple_form.labels.defaults.quantity')) %></th>
                <th><%= sort_link(@q, :product_unit_cost, t('simple_form.labels.defaults.product_unit_cost')) %></th>
                <th><%= sort_link(@q, :box_unit_cost, t('simple_form.labels.defaults.box_unit_cost')) %></th>
                <th><%= sort_link(@q, :purchase_order_name, t('simple_form.labels.defaults.purchase_order')) %></th>
                <th class="all"><%= t('simple_form.screen.actions') %></th>
              </tr>
              </thead>
              <tbody>
              <% @purchase_order_details.each do |purchase_order_detail| %>
                  <tr>
                    <td><%= purchase_order_detail.box.try(:name) %></td>
                    <td align='right'><%= purchase_order_detail.quantity %></td>
                    <td align='right'><%= purchase_order_detail.product_unit_cost %></td>
                    <td align='right'><%= purchase_order_detail.box_unit_cost %></td>
                    <td><%= purchase_order_detail.purchase_order.try(:name) %></td>
                    <td class="table-actions">
                      <%= render 'shared/action_icons', locals: {target: purchase_order_detail} %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <div class="widget-footer">
            <%= render 'shared/pagination', locals: {target: @purchase_order_details, model_index_path: purchase_order_details_path} %>
          </div>
        </div>
      </div>
    </article>
  </div>
</section>

